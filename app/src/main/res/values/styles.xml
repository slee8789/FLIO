<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/purple</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
    </style>

    <style name="ChipTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray9</item>
    </style>

    <style name="ChipActionStyle" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/grayE6</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipSpacing">4dp</item>
        <item name="singleLine">false</item>
        <item name="android:textAppearance">@style/ChipTextStyle</item>
    </style>

    <style name="ChipEntryStyle" parent="@style/Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/grayE6</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipSpacing">4dp</item>
        <item name="singleLine">false</item>
        <item name="closeIconTint">@color/purple</item>
        <item name="android:textAppearance">@style/ChipTextStyle</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="Widget.MaterialSheetFab.Sheet" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sheet_spacing</item>
        <item name="android:layout_marginBottom">@dimen/sheet_spacing</item>
        <item name="android:layout_marginLeft">@dimen/sheet_spacing</item>
        <item name="android:layout_marginRight">@dimen/sheet_spacing</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">@dimen/fab_sheet_elevation</item>
        <item name="cardMaxElevation">@dimen/fab_sheet_elevation</item>
        <item name="contentPadding">-3dp</item>
    </style>

    <style name="TextAppearance.MaterialSheetFab.Sheet.Item" parent="">
        <item name="android:layout_width">@dimen/sheet_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/sheet_item_spacing</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">@dimen/sheet_item_textsize</item>
        <item name="android:textColor">@color/black0</item>
        <item name="android:drawablePadding">@dimen/sheet_item_image_spacing</item>
    </style>

    <style name="SnackBarStyle" parent="Widget.MaterialComponents.Snackbar.FullWidth">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingStart">30dp</item>em>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@drawable/bg_item_group</item>
    </style>

    <style name="Theme.Motion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/navigationBarColor
        </item>
        <!--        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!--        <item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/purple</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
    </style>

    <style name="Theme.Motion.Translucent">
        <item name="android:statusBarColor" tools:ignore="NewApi">@color/dark_scrim</item>
    </style>

</resources>