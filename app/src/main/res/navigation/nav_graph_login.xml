<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_login"
    app:startDestination="@+id/nav_intro">

    <fragment
        android:id="@+id/nav_intro"
        android:name="com.fund.flio.ui.main.intro.IntroFragment"
        android:label="nav_intro"
        tools:layout="@layout/fragment_intro">
        <action
            android:id="@+id/action_nav_intro_to_nav_login"
            app:destination="@id/nav_login"
            app:popUpTo="@id/nav_intro"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_login"
        android:name="com.fund.flio.ui.main.login.LoginFragment"
        android:label="nav_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_nav_login_to_nav_graph_main"
            app:destination="@id/nav_graph_main"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true" />
    </fragment>

    <include app:graph="@navigation/nav_graph_main" />

</navigation>