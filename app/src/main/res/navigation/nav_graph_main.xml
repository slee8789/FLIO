<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.fund.flio.ui.main.home.HomeFragment"
        android:label="nav_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_home_to_nav_detail"
            app:destination="@id/nav_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_detail"
        android:name="com.fund.flio.ui.main.detail.DetailFragment"
        android:label="nav_detail"
        tools:layout="@layout/fragment_detail" />

    <fragment
        android:id="@+id/nav_channel"
        android:name="com.fund.flio.ui.main.channel.ChannelFragment"
        android:label="nav_detail"
        tools:layout="@layout/fragment_channel" />

    <fragment
        android:id="@+id/nav_favorite"
        android:name="com.fund.flio.ui.main.favorte.FavoriteFragment"
        android:label="nav_detail"
        tools:layout="@layout/fragment_favorite" />

    <fragment
        android:id="@+id/nav_write"
        android:name="com.fund.flio.ui.main.write.WriteFragment"
        android:label="nav_detail"
        tools:layout="@layout/fragment_write" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.fund.flio.ui.main.search.SearchFragment"
        android:label="nav_detail"
        tools:layout="@layout/fragment_search" />

</navigation>